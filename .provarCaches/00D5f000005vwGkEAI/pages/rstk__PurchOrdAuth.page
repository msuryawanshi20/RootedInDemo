                        <div class="overlayStyle" id="apdtldiv{!l.row}">
                        <apex:pageBlockTable id="pbt_apdtldiv" value="{!l.porcptaps}" var="ap" rendered="{!l.poline.PORCPTAPs__r.size>0}"
