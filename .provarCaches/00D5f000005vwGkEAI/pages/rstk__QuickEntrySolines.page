    qesolines.saveAndClose = function() {
        jQuery("#datePicker").hide();
        if (qesolines.validate())
        {
            if (qesolines.isDirty()) {
                saveAutoCompletes(qesolines, qesolines.autoFields);
                qesolines.pleaseWait();
                saveQuickEntry();
            } else {
