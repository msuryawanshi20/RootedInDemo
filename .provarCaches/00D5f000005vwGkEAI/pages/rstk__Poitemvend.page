        var ApprovedVendor = "{!$Label.VendorLocIdMustBeUsedForThisApprovedVendor}";     
        var Ven = "{!$Label.VendorAlreadyUsingVendorLoc}";                                                                                  
        var LABEL_ItemVendorRecAlreadytExistsForSelItemAndVendor = "{!$Label.ItemVendorRecAlreadytExistsForSelItemAndVendor}";
        var LABEL_PriceDecimalLimitExceeded = "{!$Label.PriceDecimalLimitExceeded}";
        var LABEL_NotImplemented = "{!$Label.NotImplemented}";
        var LABEL_VendorIsAlreadyPrimaryVendor_WantToChangeToThisVendor = "{!$Label.VendorIsAlreadyPrimaryVendor_WantToChangeToThisVendor}";
    </script>

    <apex:dynamicComponent componentValue="{!DynamicRelatedLists}" rendered="{!isView}"/>

</apex:page>